{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ place }} {% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-lg-4">
          <img src="../img/landmarks/{{ image }}" alt="" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{name}}</h1>
          <p>{{ description | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}
